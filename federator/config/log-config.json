{
    "appenders": {
        "file": {
            "type": "file",
            "filename": "federator.log",
            "maxLogSize": 10485760,
            "backups": 3,
            "compress": true
        },
        "heartbeat": {
            "type": "file",
            "filename": "heartbeat.log",
            "maxLogSize": 10485760,
            "backups": 3,
            "compress": true
        },
        "console": {
            "type": "console"
        }
    },
    "categories": {
        "default": {
            "appenders": ["file", "console"],
            "level": "debug"
        },
        "HEARTBEAT": {
            "appenders": ["heartbeat", "console"],
            "level": "debug"
        }
    }
}
